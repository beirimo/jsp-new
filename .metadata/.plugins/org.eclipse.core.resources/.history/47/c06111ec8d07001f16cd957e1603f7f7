<script>
	$(frm).on("submit", function(e){
		e.preventDefault();
		const uid=$(frm.uid).val();
		const unmae=$(frm.uname).val();
		const upass=$(frm.upass).val();
		if(uid=="" || unmae=="" || upass==""){
			alert("모든 정보를 입력해 주세요.");
			return;
		}
		let check = false;
		if(!check){ // check가 false일때 
			alert("아이디 중복체크를 해주세요.");
		}
	})

	})
</script>
